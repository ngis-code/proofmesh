# ===== API =====
API_PORT=3000
API_LOG_LEVEL=info
API_REGION=us-east

# ===== CockroachDB (east node of the global cluster) =====
# This node’s advertise address (how other regions reach it)
COCKROACH_ADVERTISE_ADDR=159.223.192.233:26257

# List of ALL Cockroach nodes in the cluster (east + central + west)
# Adjust hostnames to whatever you actually use/DNS or IPs.
COCKROACH_JOIN=146.190.65.80:26257,159.223.192.233:26257

# API-side DB connection (this region’s Cockroach node)
DB_HOST=cockroach
DB_PORT=26257
DB_USER=root
DB_PASSWORD=
DB_NAME=defaultdb        # use defaultdb unless you’ve created a custom DB

# ===== MQTT (east broker in your MQTT cluster) =====
MQTT_URL=mqtt://mqtt:1883

# ===== Validator for this region =====
# This validator ID/secret must exist in the shared `validators` table
# (provisioned via n8n or SQL).
VALIDATOR_ID=validator_us_east
VALIDATOR_SECRET=super-strong-secret-for-east
STAMP_FALLBACK_APIS=http://146.190.65.80:3000
# ===== Web / API URLs =====
# For internal calls from validator to API in this region
API_BASE_URL=http://api:3000

# For web app talking to API (in prod you’d point this at Cloudflare LB)
VITE_API_BASE_URL=https://api.proofmesh.com

# ===== Quorum / sampling (optional, these have sane defaults) =====
VERIFY_TIMEOUT_MS=1000
STAMP_VALIDATOR_SAMPLE_SIZE=3
STAMP_MIN_ONLINE_VALIDATORS=1
STAMP_QUORUM_NUMERATOR=2
STAMP_QUORUM_DENOMINATOR=3

# ===== n8n (optional) =====
N8N_BASIC_AUTH_ACTIVE=false
N8N_HOST=localhost
N8N_PORT=5678

# ===== Demo org (optional) =====
DEMO_ORG_ID=


APPWRITE_ENDPOINT=https://nyc.cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=691d3bde001255692f61
